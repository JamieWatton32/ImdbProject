<Window x:Class="ImdbProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImdbProject" 
        xmlns:viewmodels="clr-namespace:ImdbProject.ViewModels" 
        xmlns:views="clr-namespace:ImdbProject.Views"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="IMDB Browser" Height="600" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource titleStyle}" Grid.Row="0" Text="IMDB Movie Explorer"/>
        <DockPanel Grid.Row="1">
            <views:NavBar DockPanel.Dock="Top"/>
            <!-- Frame enables page navigation -I am not a fan of frame, may switch to ContentControl-->
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"/>
        </DockPanel>
    </Grid>
</Window>

