    <Window x:Class="ImdbProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImdbProject" 
        xmlns:viewmodels="clr-namespace:ImdbProject.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="IMDB Episodes" Height="450" Width="800">
    <Grid>
        <!-- Bind directly to MainViewModel.Episodes collection -->
        <DataGrid ItemsSource="{Binding Episodes}" 
                  SelectedItem="{Binding SelectedEpisode}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title ID" Binding="{Binding TitleId}" Width="100"/>
                <DataGridTextColumn Header="Season" Binding="{Binding SeasonNumber}" Width="80"/>
                <DataGridTextColumn Header="Episode" Binding="{Binding EpisodeNumber}" Width="80"/>
                <DataGridTextColumn Header="Parent Show" Binding="{Binding ParentTitle.PrimaryTitle}" Width="150"/>
                <DataGridTextColumn Header="Episode Title" Binding="{Binding Title.PrimaryTitle}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>