<Window x:Class="ImdbProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImdbProject" 
        xmlns:viewmodels="clr-namespace:ImdbProject.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="IMDB Browser" Height="600" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Navigation Bar -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Background="#FF374151">
            <Button Content="Home"
                    Click="HomeButton_Click"
                    Padding="10,5"
                    Margin="5" />
            <Button Content="Browse Titles"
                    Click="TitlesButton_Click"
                    Padding="10,5"
                    Margin="5" />
            <Button Content="Favourites"
                    Click="FavouritesButton_Click"
                    Padding="10,5"
                    Margin="5" />
        </StackPanel>

        <!-- Frame enables page navigation -->
        <Frame x:Name="MainFrame" 
               Grid.Row="1"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>

