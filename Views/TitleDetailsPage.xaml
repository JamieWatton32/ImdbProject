<Page x:Class="ImdbProject.Views.TitleDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImdbProject.Views"
      xmlns:viewmodels="clr-namespace:ImdbProject.ViewModels" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TitleDetailsPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Row 0: Back Button -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Image and Title Info -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Overview and Cast -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Back Button -->
        <Button Grid.Row="0" 
                HorizontalAlignment="Left" 
                Margin="0,0,0,10"
                Padding="15,8"
                Content="← Back to Main"
                Click="BackButton_Click"
                FontSize="14"/>

        <!-- Row 1: Image (25%) and Title Info (75%) -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>

            <!-- Image Section -->
            <Border Grid.Column="0" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Margin="0,0,15,0"
                    Background="#F5F5F5">
                <Grid>
                    <!-- Placeholder for poster image -->
                    <Image Stretch="UniformToFill" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                    
                    <!-- Placeholder text when no image -->
                    <TextBlock Text="No Poster Available" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Foreground="Gray"
                               FontStyle="Italic"/>
                </Grid>
            </Border>

            <!-- Title Info Section -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="{Binding SelectedTitle.PrimaryTitle}" 
                               FontSize="32" 
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               Margin="0,0,0,5"/>
                    
                    <!-- Original Title -->
                    <TextBlock Text="{Binding SelectedTitle.OriginalTitle}" 
                               FontSize="16" 
                               FontStyle="Italic"
                               Foreground="Gray"
                               Margin="0,0,0,15"
                               Visibility="{Binding SelectedTitle.OriginalTitle, Converter={StaticResource NullToVisibilityConverter}}"/>

                    <!-- Basic Info Grid -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Type:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                        <TextBlock Text="{Binding SelectedTitle.TitleType}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                        <TextBlock Text="Year:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5">
                            <TextBlock Text="{Binding SelectedTitle.StartYear}"/>
                            <TextBlock Text=" - " Visibility="{Binding SelectedTitle.EndYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding SelectedTitle.EndYear}" Visibility="{Binding SelectedTitle.EndYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </StackPanel>

                        <TextBlock Text="Runtime:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5">
                            <TextBlock Text="{Binding SelectedTitle.RuntimeMinutes}"/>
                            <TextBlock Text=" minutes" Margin="5,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="Rating:" FontWeight="Bold" Grid.Row="3" Grid.Column="0" Margin="0,0,10,5"
                                   Visibility="{Binding SelectedTitle.Rating, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"
                                    Visibility="{Binding SelectedTitle.Rating, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding SelectedTitle.Rating.AverageRating, StringFormat='{}{0:F1}/10'}"/>
                            <TextBlock Text=" (" Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding SelectedTitle.Rating.NumVotes, StringFormat='{}{0:N0}'}"/>
                            <TextBlock Text=" votes)"/>
                        </StackPanel>

                        <TextBlock Text="Genres:" FontWeight="Bold" Grid.Row="4" Grid.Column="0" Margin="0,0,10,0"
                                   VerticalAlignment="Top"
                                   Visibility="{Binding SelectedTitle.Genres.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                        <ItemsControl ItemsSource="{Binding SelectedTitle.Genres}" Grid.Row="4" Grid.Column="1"
                                      Visibility="{Binding SelectedTitle.Genres.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightBlue" 
                                            CornerRadius="3" 
                                            Padding="8,4" 
                                            Margin="0,0,5,5">
                                        <TextBlock Text="{Binding GenreName}" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Row 2: Overview (50%) and Cast (50%) -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <!-- Overview Box -->
            <Border Grid.Column="0" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="15"
                    Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Overview" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"/>

                        <!-- Directors -->
                        <StackPanel Margin="0,0,0,15"
                                    Visibility="{Binding SelectedTitle.Directors.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Directors" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ItemsControl ItemsSource="{Binding SelectedTitle.Directors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PrimaryName}" Margin="5,0,0,3"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Writers -->
                        <StackPanel Margin="0,0,0,15"
                                    Visibility="{Binding SelectedTitle.Writers.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Writers" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ItemsControl ItemsSource="{Binding SelectedTitle.Writers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PrimaryName}" Margin="5,0,0,3"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Episodes -->
                        <StackPanel Margin="0,0,0,0"
                                    Visibility="{Binding SelectedTitle.Episodes.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Episodes" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock>
                                <Run Text="{Binding SelectedTitle.Episodes.Count, Mode=OneWay}"/>
                                <Run Text=" episode(s)"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Cast Box -->
            <Border Grid.Column="1" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="15"
                    Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Cast" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Placeholder for cast list -->
                            <TextBlock Text="Cast information will be displayed here" 
                                       Foreground="Gray"
                                       FontStyle="Italic"
                                       TextWrapping="Wrap"/>
                            
                            <!-- You can bind this to a cast collection when available -->
                            <!-- Example:
                            <ItemsControl ItemsSource="{Binding SelectedTitle.Cast}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Width="40" Height="40" Fill="LightGray" Grid.Column="0" Margin="0,0,10,0"/>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ActorName}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding CharacterName}" FontSize="12" Foreground="Gray"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
