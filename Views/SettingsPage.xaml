<Page x:Class="ImdbProject.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImdbProject.Views"
      xmlns:vm="clr-namespace:ImdbProject.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Page.DataContext>
        <vm:SettingsViewModel/>
    </Page.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Application Settings" FontSize="24" Margin="0,0,0,20"/>

            <!-- Notification Settings -->
            <TextBlock Text="Notifications" FontSize="18" Margin="0,0,0,10"/>
            <StackPanel Margin="20,0,0,20">
                <CheckBox Content="Enable notifications" IsChecked="{Binding NotificationsEnabled}"/>
                <TextBlock Text="{Binding NotificationStatus}" Margin="0,5,0,0" Foreground="Gray"/>

                <CheckBox Content="Sound alerts" IsChecked="{Binding SoundEnabled}" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding SoundStatus}" Margin="0,5,0,0" Foreground="Gray"/>
            </StackPanel>

            <!-- Theme Settings -->
            <TextBlock Text="Appearance" FontSize="18" Margin="0,0,0,10"/>
            <StackPanel Margin="20,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Width="150" SelectedIndex="{Binding SelectedTheme}">
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Dark"/>
                        <ComboBoxItem Content="Auto"/>
                    </ComboBox>
                </StackPanel>
                <TextBlock Text="{Binding ThemeStatus}" Margin="0,5,0,0" Foreground="Gray"/>

                <Slider Minimum="8" Maximum="20" Value="{Binding FontSize}" 
                        TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,10,0,5"/>
                <TextBlock Text="{Binding FontSizeStatus}" Foreground="Gray"/>
            </StackPanel>

            <!-- Data Settings -->
            <TextBlock Text="Data Management" FontSize="18" Margin="0,0,0,10"/>
            <StackPanel Margin="20,0,0,20">
                <Button Content="Clear Cache" Width="150" HorizontalAlignment="Left"
                        Command="{Binding ClearCacheCommand}" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding CacheStatus}" Foreground="Gray"/>

                <Button Content="Export Data" Width="150" HorizontalAlignment="Left"
                        Command="{Binding ExportDataCommand}" Margin="0,10,0,5"/>
                <TextBlock Text="{Binding ExportStatus}" Foreground="Gray"/>

                <Button Content="Reset Settings" Width="150" HorizontalAlignment="Left"
                        Command="{Binding ResetCommand}" Margin="0,10,0,5"/>
                <TextBlock Text="{Binding ResetStatus}" Foreground="Gray"/>
            </StackPanel>

            <!-- Click Counter -->
            <TextBlock Text="Interaction Counter" FontSize="18" Margin="0,0,0,10"/>
            <StackPanel Margin="20,0,0,20">
                <Button Content="Click Me!" Width="150" HorizontalAlignment="Left"
                        Command="{Binding IncrementCounterCommand}"/>
                <TextBlock Text="{Binding ClickCounterText}" Margin="0,5,0,0" FontWeight="Bold"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
