<Page x:Class="ImdbProject.Views.NameDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImdbProject.Views"
      xmlns:viewmodels="clr-namespace:ImdbProject.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:NameDetailViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NameDetailPage"
      Style="{StaticResource PageStyle}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Back Button -->
        <Button Grid.Row="0"
                Content="← Back to Details"
                Click="BackButton_Click"
                Style="{StaticResource BackButtonStyle}"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>

        <!-- Row 1: Image (25%) and Name Info (75%) -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>

            <!-- Image Section -->
            <Border Grid.Column="0"
                    Style="{StaticResource ImagePlaceholderBorderStyle}"
                    Margin="0,0,15,0">
                <Grid>
                    <Image Stretch="UniformToFill" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                    <TextBlock Text="No Photo Available" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Style="{StaticResource MutedTextStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="10"/>
                </Grid>
            </Border>

            <!-- Name Info Section -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Name -->
                    <TextBlock Text="{Binding SelectedName.PrimaryName}"
                               Style="{StaticResource PageHeaderStyle}"
                               TextWrapping="Wrap"/>

                    <!-- Basic Info Grid -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Profession -->
                        <TextBlock Text="Profession:" 
                                   Style="{StaticResource LabelStyle}" 
                                   Grid.Row="0" 
                                   Grid.Column="0" 
                                   Margin="0,0,10,5"
                                   Visibility="{Binding SelectedName.PrimaryProfession, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding SelectedName.PrimaryProfession, Converter={StaticResource StringFormatConverter}}" 
                                   Grid.Row="0" 
                                   Grid.Column="1" 
                                   Margin="0,0,0,5"
                                   Visibility="{Binding SelectedName.PrimaryProfession, Converter={StaticResource NullToVisibilityConverter}}"/>

                        <!-- Birth Year -->
                        <TextBlock Text="Born:" 
                                   Style="{StaticResource LabelStyle}" 
                                   Grid.Row="1" 
                                   Grid.Column="0" 
                                   Margin="0,0,10,5"
                                   Visibility="{Binding SelectedName.BirthYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding SelectedName.BirthYear}" 
                                   Grid.Row="1" 
                                   Grid.Column="1" 
                                   Margin="0,0,0,5"
                                   Visibility="{Binding SelectedName.BirthYear, Converter={StaticResource NullToVisibilityConverter}}"/>

                        <!-- Death Year -->
                        <TextBlock Text="Died:" 
                                   Style="{StaticResource LabelStyle}" 
                                   Grid.Row="2" 
                                   Grid.Column="0" 
                                   Margin="0,0,10,5"
                                   Visibility="{Binding SelectedName.DeathYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding SelectedName.DeathYear}" 
                                   Grid.Row="2" 
                                   Grid.Column="1" 
                                   Margin="0,0,0,5"
                                   Visibility="{Binding SelectedName.DeathYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <!-- Right Column: Known For & Acting Credits -->
            <Border Grid.Column="0"
                    Style="{StaticResource CardBorderStyle}"
                    Margin="10,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Known For -->
                        <StackPanel Margin="0,0,0,15"
                                    Visibility="{Binding SelectedName.KnownForTitles.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Known For"
                                       Style="{StaticResource SectionHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding SelectedName.KnownForTitles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FF374151"
                                                CornerRadius="6"
                                                Padding="10"
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Text="{Binding PrimaryTitle}" 
                                                          FontWeight="Bold"
                                                          FontSize="14"
                                                          Grid.Row="0"
                                                          TextWrapping="Wrap"/>

                                                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5,0,0">
                                                    <TextBlock Text="{Binding TitleType, Converter={StaticResource StringFormatConverter}}"
                                                              Style="{StaticResource MutedTextStyle}"
                                                              FontSize="12"/>
                                                    <TextBlock Text=" • " 
                                                              Style="{StaticResource MutedTextStyle}"
                                                              FontSize="12"
                                                              Margin="5,0"
                                                              Visibility="{Binding StartYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                    <TextBlock Text="{Binding StartYear}"
                                                              Style="{StaticResource MutedTextStyle}"
                                                              FontSize="12"
                                                              Visibility="{Binding StartYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5,0,0"
                                                           Visibility="{Binding Rating, Converter={StaticResource NullToVisibilityConverter}}">
                                                    <TextBlock Text="⭐" FontSize="12"/>
                                                    <TextBlock Text="{Binding Rating.AverageRating, StringFormat='{}{0:F1}'}"
                                                              FontSize="12"
                                                              Margin="3,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Acting Credits -->
                        <StackPanel Margin="0,0,0,0"
                                    Visibility="{Binding SelectedName.Principals.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Acting Credits"
                                       Style="{StaticResource SectionHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding SelectedName.Principals}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Characters}" 
                                                          FontWeight="SemiBold"
                                                          TextWrapping="Wrap"
                                                          Visibility="{Binding Characters, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding JobCategory, Converter={StaticResource StringFormatConverter}}" 
                                                          FontSize="12"
                                                          Style="{StaticResource MutedTextStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
