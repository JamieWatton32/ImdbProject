<Page x:Class="ImdbProject.Views.NameDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImdbProject.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NameDetailPage"
      Style="{StaticResource PageStyle}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Row 0: Back Button -->
        <Button Grid.Row="0"
                Content="← Back to Main"
                Click="BackButton_Click"
                Style="{StaticResource BackButtonStyle}"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>

        <!-- Row 1: Image (25%) and Name Info (75%) -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>

            <!-- Image Section -->
            <Border Grid.Column="0"
                    Style="{StaticResource ImagePlaceholderBorderStyle}"
                    Margin="0,0,15,0">
                <Grid>
                    <Image Stretch="UniformToFill" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                    <TextBlock Text="We don't have images available.. but it would be here if we did!" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Style="{StaticResource MutedTextStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="10"/>
                </Grid>
            </Border>

            <!-- Name Info Section -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="{Binding SelectedName.PrimaryTitle}"
                               Style="{StaticResource PageHeaderStyle}"
                               TextWrapping="Wrap"/>

                    <TextBlock Text="{Binding SelectedTitle.OriginalTitle}"
                               Style="{StaticResource MutedTextStyle}"
                               FontSize="16"
                               Margin="0,0,0,15"
                               Visibility="{Binding SelectedTitle.OriginalTitle, Converter={StaticResource NullToVisibilityConverter}}"/>

                    <!-- Basic Info Grid -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Type:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                        <TextBlock Text="{Binding SelectedTitle.TitleType}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                        <TextBlock Text="Year:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5">
                            <TextBlock Text="{Binding SelectedTitle.StartYear}"/>
                            <TextBlock Text=" - " Visibility="{Binding SelectedTitle.EndYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Text="{Binding SelectedTitle.EndYear}" Visibility="{Binding SelectedTitle.EndYear, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </StackPanel>

                        <TextBlock Text="Runtime:" Style="{StaticResource LabelStyle}" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5">
                            <TextBlock Text="{Binding SelectedTitle.RuntimeMinutes}"/>
                            <TextBlock Text=" minutes" Margin="5,0,0,0"/>
                        </StackPanel>

                        <TextBlock Text="Rating:" Style="{StaticResource LabelStyle}" Grid.Row="3" Grid.Column="0" Margin="0,0,10,5"
                                   Visibility="{Binding SelectedTitle.Rating, Converter={StaticResource NullToVisibilityConverter}}"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"
                                    Visibility="{Binding SelectedTitle.Rating, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding SelectedTitle.Rating.AverageRating, StringFormat='{}{0:F1}/10'}"/>
                            <TextBlock Text=" (" Margin="5,0,0,0"/>
                            <TextBlock Text="{Binding SelectedTitle.Rating.NumVotes, StringFormat='{}{0:N0}'}"/>
                            <TextBlock Text=" votes)"/>
                        </StackPanel>

                        <TextBlock Text="Genres:" Style="{StaticResource LabelStyle}" Grid.Row="4" Grid.Column="0" Margin="0,0,10,0"
                                   VerticalAlignment="Top"
                                   Visibility="{Binding SelectedTitle.Genres.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                        <ItemsControl ItemsSource="{Binding SelectedTitle.Genres}" Grid.Row="4" Grid.Column="1"
                                      Visibility="{Binding SelectedTitle.Genres.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource GenreTagBorderStyle}">
                                        <TextBlock Text="{Binding GenreName}" Style="{StaticResource GenreTagTextStyle}"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Row 2: Overview (50%) and Cast (50%) -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <!-- Overview Box -->
            <Border Grid.Column="0"
                    Style="{StaticResource CardBorderStyle}"
                    Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Overview"
                                   Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Directors -->
                        <StackPanel Margin="0,0,0,15"
                                    Visibility="{Binding SelectedTitle.Directors.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Directors" Style="{StaticResource SubHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding SelectedTitle.Directors}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PrimaryName}" Margin="5,0,0,3"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Writers -->
                        <StackPanel Margin="0,0,0,15"
                                    Visibility="{Binding SelectedTitle.Writers.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Writers" Style="{StaticResource SubHeaderStyle}"/>
                            <ItemsControl ItemsSource="{Binding SelectedTitle.Writers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PrimaryName}" Margin="5,0,0,3"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Episodes -->
                        <StackPanel Margin="0,0,0,0"
                                    Visibility="{Binding SelectedTitle.Episodes.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <TextBlock Text="Episodes" Style="{StaticResource SubHeaderStyle}"/>
                            <TextBlock>
                                <Run Text="{Binding SelectedTitle.Episodes.Count, Mode=OneWay}"/>
                                <Run Text=" episode(s)"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Cast Box -->
            <Border Grid.Column="1"
                    Style="{StaticResource CardBorderStyle}"
                    Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Cast"
                               Style="{StaticResource SectionHeaderStyle}"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Cast information will be displayed here"
                                       Style="{StaticResource MutedTextStyle}"
                                       TextWrapping="Wrap"/>

                            <ItemsControl ItemsSource="{Binding SelectedTitle.Cast}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Width="40" Height="40" Fill="#FF374151" Grid.Column="0" Margin="0,0,10,0"/>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ActorName}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding CharacterName}" 
                                                          FontSize="12"
                                                          Style="{StaticResource MutedTextStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
